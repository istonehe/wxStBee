/**index.wxss**/

.enter_info{
  width:100%;
  display: flex;
  flex-direction: column;
  background:#70d25c;
  padding-bottom: 100rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 156rpx;
  height: 156rpx;
  margin: 20rpx;
  border-radius: 50%;
  display: block;
}

.userinfo-nickname {
  color: #fff;
}

.school_name{
  font-size:38rpx;
  text-align: center;
  color: #fff;
}

.course_name{
  font-size:34rpx;
  text-align: center;
  padding: 20rpx 0;
  color: #fff;
}

.beelogin{
  display: none;
}

.asks_status{
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding:40rpx 0;
}

.status_item{
  display: flex;
  width:130rpx;
  flex-direction: column;
  text-align: center;
  margin:0 90rpx;
  background: #65c652;
  padding:30rpx;
  border-radius: 20rpx;
}

.status_title{
  font-size: 30rpx;
  color:#caefc3;
}

.status_cont{
  padding-top:20rpx;
  font-size: 60rpx;
  color: #fff;
}

.add_ask{
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding:70rpx 0 0 0;
}

.ask_btn{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  font-size: 30rpx;
  width:180rpx;
  height:180rpx;
  border-radius: 50%;
  background:#65c652;
  color:#fff;
}