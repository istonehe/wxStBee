.container {
  justify-content: flex-start;
  font-size: 34rpx;
}

page{
  background: #f5f5f5;
}

.pageloading{
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pageloading image{
  width:280rpx;
  height:280rpx;
  margin-top:350rpx;
}

.ask_box {
  box-sizing: border-box;
  width: 100%;
  background: #fff;
}

.ask_cont {
  box-sizing: border-box;
  padding: 0 30rpx 30rpx 30rpx;
  margin-bottom: 30rpx;
}

.ask_text {
  margin-top: 30rpx;
  color: #666;
}

.ask_imgs {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 40rpx;
}

.ask_imgs image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.ask_voice {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
  width: 510rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  border: 1px solid #60b657;
  background: #fff;
  color: #60b657;
}

.voice_cont{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.wave_img {
  width: 150rpx;
  height: 52rpx;
  display: block;
  margin: 0 40rpx;
}

.play_ico{
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin-right:40rpx;
}

.ask_info {
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  line-height: 90rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #ccc;
}

.ask_time {
  color: #aaa;
}

.status_cancel{
  display: flex;
  flex-direction:row;
  justify-content: flex-end;
  align-items: center;
}

.ask_cancel{
  margin-left:30rpx;
  color:#666;
}


.ask_status {
  color: #ccc;
}

.answered {
  color: #60b657;
}

.answer_box{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  padding-bottom:20rpx;
  width:100%;
}

.answer_none{
  color:#aaa;
  padding:80rpx 0 0 0;
  text-align: center;
}

.answer_item{
  box-sizing: border-box;
  width:710rpx;
  background:#fff;
  margin-top:20rpx;
  border-radius: 20rpx;
}

.answer_info{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding:30rpx;
  border-bottom:1px solid #eee;
}

.answerer{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.user_avatar{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  margin-right:20rpx;
}

.user_name{
  color:#666;
}

.answer_time{
  color:#aaa;
}

.answer_cont{
  padding:0 30rpx 30rpx 30rpx;
}

.answer_grate{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  width:710rpx;
  background:#fff;
  margin-top:20rpx;
  border-radius: 20rpx;
}

.answer_grate image{
  width:60rpx;
  height:48rpx;
  margin-right:20rpx;
  display: block;
}

.not_understand, .yes_understand{
  width:300rpx;
  height:100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  border:1px solid #ddd;
  margin:30rpx 30rpx;
}

.not_understand{
  color: #ba5b51;
}

.yes_understand{
  color: #76bc21;
}



/* mask 弹窗 */
.mask_tip{
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
}

.mask_bg{
  background: #000;
  opacity: .5;
  width: 100%;
  height: 100%;
}

.tip_box{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
}

.tip_wrap{
  width: 480rpx;
  margin: 40% auto;
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 20rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.tip_text{
  padding:0 40rpx 30rpx 40rpx;
  font-size:34rpx;
  text-align: center;
  color: #888;
}

.tip_btn{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  font-size: 30rpx;
  width:220rpx;
  height:90rpx;
  background:#60b657;
  color:#fff;  
}
