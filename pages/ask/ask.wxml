<view class="container">
  <view class="textarea_box">
    <view class="textarea_wrap">
      <textarea placeholder="请填写问题(最多200字)" maxlength="100" class="textarea_cont"></textarea>
    </view>
  </view>
  <view class="file_box">
    <view class="file_wrap">
      <view class="file_list">
        <view class="file_item">
          <image src="../../images/img-placeholder.png" class="askimg" background-size="cover"></image>
        </view>
      </view>
      <view class="file_tip">
        拍照提问，最多3张
      </view>
    </view>
  </view>
  <view class="voice_box">
    <view class="voice_wrap">
      <view class="voice_btn">
        语音提问
      </view>
    </view>
  </view>
  <view class="submit_btn">
    提交问题
  </view>
</view>